<h1>New Figure</h1>
<form method="post" action="/figures">
<label for="name">Name</label><br>
<input type="text" name="figure[name]" id="figure_name"><br><br>
<label for="titles">Titles</label><br>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> <%= title.name %>
    <br>
<% end %>
<br>
<label for="landmarks">Landmarks</label><br>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"> <%= landmark.name %>
    <br>
<% end %>
<br>
New title
<br>
<label for="title[name]">Title Name</label><br>
<input type="text" name="title[name]" id="new_title"><br>
<br>

New Landmark
<br>
<label for="landmark_name">Landmark Name</label><br>
<input type="text" name="landmark[name]" id="new_landmark"><br>
<br>


<input type="submit" value="Create New Figure">

</form>